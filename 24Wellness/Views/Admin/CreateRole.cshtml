@model CreateRoleViewModel

@{
    ViewBag.Title = "Create New Role";
}

<h1>Create New Role</h1>

<div class="row">
    <div class="col-md-4">
        <form>
            <h2>Create a new account.</h2>
            <hr />
            <div asp-validation-summary="ModelOnly" class="text-danger" role="alert"></div>
            <div class="form-floating mb-3">
                <input asp-for="RoleName" class="form-control" autocomplete="username" aria-required="true" placeholder="name@example.com" />
                <label asp-for="RoleName">RoleName</label>
                <span asp-validation-for="RoleName" class="text-danger"></span>
            </div>
        
            <button id="registerSubmit" type="submit" class="w-100 btn btn-lg btn-primary">Create Role</button>
        </form>
   </div>
</div>
